      <CopyToOutputDirectory>IfNewer</CopyToOutputDirectory>
    </None>
    <None Update="opus.dll">
      <CopyToOutputDirectory>IfNewer</CopyToOutputDirectory>
    </None>    
    <Folder Include="Migrations\" />
